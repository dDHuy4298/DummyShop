<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DummyShopTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_malibu</item>
        <item name="colorPrimaryVariant">@color/color_malibu</item>
        <item name="colorPrimaryDark">@color/color_malibu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/andes</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="ProductRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:numStars">5</item>
        <item name="android:progressTint">@color/color_bittersweet</item>
    </style>
</resources>
